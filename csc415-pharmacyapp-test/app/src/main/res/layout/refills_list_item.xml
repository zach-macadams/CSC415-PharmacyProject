<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_refills_medicine_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_refills_number_label"
        android:text="@string/refills_number_text"
        android:textSize="18sp"
        android:layout_below="@+id/tv_refills_medicine_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/refills_horizontal_space"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_refills_number"
        android:layout_toEndOf="@+id/tv_refills_number_label"
        android:layout_alignBaseline="@+id/tv_refills_number_label"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/tv_refills_number_label"
        />

</RelativeLayout>