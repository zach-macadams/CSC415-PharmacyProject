<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_add_medicine">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_new_medicine_name"
        android:text="@string/add_medicine_name_text"
        android:textSize="25sp"
        android:layout_marginEnd="@dimen/new_medicine_content_horizontal_space"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_new_medicine_dose"
        android:text="@string/add_medicine_dose_text"
        android:layout_below="@+id/tv_new_medicine_name"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/new_medicine_content_vertical_space"
        android:layout_marginEnd="@dimen/new_medicine_content_horizontal_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_new_medicine_times"
        android:text="@string/add_medicine_times_text"
        android:layout_below="@+id/tv_new_medicine_dose"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/new_medicine_content_vertical_space"
        android:layout_marginEnd="@dimen/new_medicine_content_horizontal_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_new_medicine_days"
        android:text="@string/add_medicine_days_text"
        android:layout_below="@+id/tv_new_medicine_times"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/new_medicine_content_vertical_space"
        android:layout_marginEnd="@dimen/new_medicine_content_horizontal_space"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_new_medicine_name"
        android:inputType="text"
        android:layout_toEndOf="@+id/tv_new_medicine_name"
        android:layout_alignBaseline="@+id/tv_new_medicine_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_new_medicine_dose"
        android:inputType="number"
        android:layout_below="@+id/et_new_medicine_name"
        android:layout_toEndOf="@+id/tv_new_medicine_name"
        android:layout_alignBaseline="@+id/tv_new_medicine_dose"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_time"
        style="?android:attr/buttonStyleSmall"
        android:text="@string/add_medicine_time_button_text"
        android:layout_below="@+id/et_new_medicine_dose"
        android:layout_toEndOf="@+id/tv_new_medicine_times"
        android:layout_alignBaseline="@+id/tv_new_medicine_times"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add_time"
        android:layout_toEndOf="@+id/tv_new_medicine_days"
        android:layout_alignBaseline="@+id/tv_new_medicine_days">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_monday"
            android:text="@string/add_medicine_day_monday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_tuesday"
            android:text="@string/add_medicine_day_tuesday"
            android:layout_below="@+id/cb_new_medicine_monday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_wednesday"
            android:text="@string/add_medicine_day_wednesday"
            android:layout_below="@+id/cb_new_medicine_tuesday"
            android:layout_marginEnd="@dimen/new_medicine_content_horizontal_checkbox_space"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_thursday"
            android:text="@string/add_medicine_day_thursday"
            android:layout_below="@+id/cb_new_medicine_wednesday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_friday"
            android:text="@string/add_medicine_day_friday"
            android:layout_toEndOf="@+id/cb_new_medicine_wednesday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_saturday"
            android:text="@string/add_medicine_day_saturday"
            android:layout_below="@+id/cb_new_medicine_friday"
            android:layout_toEndOf="@+id/cb_new_medicine_wednesday"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_new_medicine_sunday"
            android:text="@string/add_medicine_day_sunday"
            android:layout_below="@+id/cb_new_medicine_saturday"
            android:layout_toEndOf="@+id/cb_new_medicine_wednesday"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit_new_medicine"
            android:text="@string/add_medicine_submit_button_text"
            android:layout_marginEnd="@dimen/new_medicine_content_horizontal_space"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset_new_medicine"
            android:text="@string/add_medicine_reset_button_text"
            style="?android:buttonBarButtonStyle"/>

    </LinearLayout>

</RelativeLayout>